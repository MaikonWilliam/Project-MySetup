@model List<UserModel>;
@{
    ViewData["Title"] = "Listagem de Usuários";
}


<div class="text-center">
    <h1> Aqui mostrará meus pcs cadastrados</h1>
</div>

<a class="btn btn-dark" asp-controller="User" asp-action="Add">Adicionar Usuário</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].Name)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].Email)</th>
            <th scope="col">@Html.DisplayNameFor(model => model[0].RegistrationDate)</th>
            
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null && Model.Any())
        {

            foreach (UserModel Setup in Model)
            {
                <tr>
                    <th scope="row">@Setup.Id</th>
                    <td>@Setup.Name</td>
                    <td>@Setup.Email</td>              
                    <td>@Setup.RegistrationDate</td>         
                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-primary" asp-action="Details"  asp-route-id="@Setup.Id" >Detalhes</a>
                            <a role="button" class="btn btn-danger" asp-action="ConfirmDelete" asp-route-id="@Setup.Id">Apagar</a>
                            <a role="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@Setup.Id">Editar</a>
                        </div>
                    <td>
                </tr>
            }
        }
        else
        {
            <tr class="odd"><td valign="top" colspan="5"> Nenhum Usuário Encontrado</td></tr>
                    
        }

    </tbody>
</table>
